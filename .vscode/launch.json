{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Client",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "sourceMaps": true,
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/client/vscode"
            ],
            "outFiles": [
                "${workspaceFolder}/client/vscode/out/**/*.js"
            ],
            "preLaunchTask": "wdl-extension-watch:client",
            "env": {
                "VSCODE_DEBUG_MODE": "true"
            }
        },
        {
            "name": "Launch Server",
            "type": "python",
            "request": "launch",
            "module": "wdl_lsp",
            "console": "internalConsole",
            "args": [
                "--tcp"
            ],
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/server"
            }
        }
    ],
    "compounds": [
        {
            "name": "Server + Client",
            "configurations": [
                "Launch Server",
                "Launch Client"
            ]
        }
    ]
}
