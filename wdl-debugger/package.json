{
	"name": "wdl-debugger",
	"displayName": "WDL Debugger",
	"description": "Run and debug WDL code",
	"publisher": "broadinstitute",
	"repository": "https://github.com/broadinstitute/wdl-ide-vscode/wdl-debugger",
	"version": "0.0.1",
	"private": true,
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Programming Languages",
		"Debuggers"
	],
	"activationEvents": [
		"onCommand:extension.runWDL",
		"onLanguage:wdl"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.runWDL",
				"title": "Run WDL"
			}
		],
		"configuration": {
			"title": "WDL Debugger Configuration",
			"properties": {
				"wdl-debugger.cromwell.baseUri": {
					"type": "string",
					"description": "Base URI of the Cromwell API",
					"pattern": "^https?://[\\w.-]+(:\\d+)[/\\w.-]*$",
					"default": "http://localhost:8000/api/workflows/v1",
					"scope": "application"
				},
				"wdl-debugger.cromwell.pollMsec": {
					"type": "number",
					"description": "Polling interval of Cromwell API, in msec",
					"minimum": 5000,
					"default": 5000,
					"scope": "application"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"package": "vsce package --yarn",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"@types/request-promise-native": "^1.0.16",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vsce": "^1.62.0",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"request": "^2.88.0",
		"request-promise-native": "^1.0.7"
	}
}
